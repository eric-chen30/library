/*布局时一定要注意，使用了position:abosulte属性就脱离了文档流，不会按块依次向下布局*/
page {
  height: 100%;
  padding: 0;
  margin: 0;
}

.logo {
  text-align: center;
  width: 100%;
  height: 50%;
  margin-top: 60px;
}
.logo image {
  width: 130px;
  height: 130px;
  border-radius: 50%;
}

.main {
  width: 300px;
  height: 30%;
  margin: auto;
  margin-top: 46px;
}

#login_button{
  margin: 25px;
}

.register {
  display: flex;
  width: 100%;
  margin-top: 28px;
  justify-content: space-around;
}




