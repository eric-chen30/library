/* pages/login/login.wxss */

/*布局时一定要注意，使用了position:abosulte属性就脱离了文档流，不会按块依次向下布局*/
page {
  height: 100%;
  padding: 0;
  margin: 0;
}

.logo {
  text-align: center;
  width: 100%;
  height: 50%;
  margin-top: 60px;
}
.logo image {
  width: 150px;
  height: 150px;
  border-radius: 50%;
}

.main {
  width: 300px;
  height: 30%;
  margin: auto;
  margin-top: 46px;
}

.phone_input {
  border-radius: 8%;
  opacity: 0.6;
}

.password_input {
  border-radius: 8%;
  opacity: 0.6;
}

.register {
  display: flex;
  width: 100%;
  margin-top: 28px;
}
.register button {
  width: 120px;
  opacity: 0.7;
  background: floralwhite;
}



